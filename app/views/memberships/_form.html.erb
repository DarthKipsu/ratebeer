<%= form_for(@membership) do |f| %>
  <% if @membership.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@membership.errors.count, "error") %> prohibited this membership from being saved:</h3>

      <ul>
        <% @membership.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if @beer_clubs.empty? %>
    <p>You're already a member of all clubs!</p>
  <% else %>
  <div class="col-md-12">
    <div class="form-inline">
      <%= f.label :beer_club_id %><br>
      <%= f.select :beer_club_id, options_from_collection_for_select(@beer_clubs, :id, :to_s), {}, {class:'form-control'} %>
      <%= f.submit 'Join', class:'btn btn-primary' %>
    </div>
  </div>
  <% end %>
<% end %>
