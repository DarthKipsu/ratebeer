<p id="notice"><%= notice %></p>

<h2>
  <%= @brewery.name %>
</h2>

<p>
  <i>Established in: <%= @brewery.year %>.</i>
</p>

<p>Number of beers <%= @brewery.beers.count %>.</p>

<p>
  <% @brewery.beers.each do |beer| %>
    <%= link_to beer.name, beer %></td>
    <% end %>
</p>

<% if @brewery.ratings.count > 0 %>
    <p>Has <%= pluralize @brewery.ratings.count, 'rating', 'ratings' %>, average <%= sprintf "%0.1f", @brewery.average_rating %></p>
<% end %>

<%= link_to 'Edit', edit_brewery_path(@brewery) %> |
<%= link_to 'Back', breweries_path %>
