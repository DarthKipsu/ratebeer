<div class="col-md-12">
<% cache @brewery do %>
<h2>
  <%= @brewery.name %>
</h2>

<p>
<i>
  Established in: <%= @brewery.year %>. 
  <% if not @brewery.active %>Retired.<% end %>
  </i>
</p>

<p>Number of beers <%= @brewery.beers.count %>.</p>

<% if @brewery.ratings.count > 0 %>
    <p>Has <%= pluralize @brewery.ratings.count, 'rating', 'ratings' %>, average <%= round @brewery.average_rating %></p>
<% end %>

<ul>
  <% @brewery.beers.each do |beer| %>
      <li><%= link_to beer.name, beer %></li>
    <% end %>
</ul>
<% end %>

<%= link_to "change activity", toggle_activity_brewery_path(@brewery.id), method: :post, class: "btn btn-primary" %>
<%= edit_and_destroy_buttons(@brewery) %>
</div>
