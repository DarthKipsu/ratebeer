<h1>Sign in</h1>

<div class="col-md-8 well well-sm">
  <%= form_tag session_path do %>
    <div class="form-group">
      <label>username</label>
      <%= text_field_tag :username, params[:username], class:'form-control' %>
      <label>password</label>
      <%= password_field_tag :password, params[:password], class:'form-control' %>
    </div>
    <%= submit_tag "Log in", class:'btn btn-primary' %>
  <% end %>
</div>
<div class="col-md-8 well well-sm">
  <strong>Or</strong></br>
  <%= link_to 'Sign in with GitHub', 'auth/github', class: 'btn btn-primary' %>
</div>
