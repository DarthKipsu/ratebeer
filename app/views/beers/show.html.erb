<p id="notice"><%= notice %></p>

<h2><%= @beer.name %></h2>

<p>
    <strong>Style:</strong> <%= link_to @beer.style, @beer.style %></br>
    <strong>Brewery:</strong> <%= link_to @beer.brewery.name, @beer.brewery %>
</p>

<% if !@beer.ratings.empty? %>
    <p>Has <%= pluralize @beer.ratings.count, 'rating', 'ratings' %>, average <%= sprintf "%0.1f", @beer.average_rating %></p>
<% end %>

<% if current_user %>
    <%= form_for(@rating) do |f| %>
        <%= f.hidden_field :beer_id %>
        <strong>Give a rating:</strong>  <%= f.number_field :score %>
        <%= f.submit %>
    <% end %>
    <p></p>
<% end %>

<% if current_user %>
    <%= link_to 'Edit', edit_beer_path(@beer) %>
    | <%= link_to 'Destroy', beer_path(@beer), method: :delete,
    data: { confirm: 'Are you sure?'} %>
<% end %>
