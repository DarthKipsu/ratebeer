<div class="col-md-12">
<div class="col-md-6">
  <% cache @beer do %>
    <h2><%= @beer.name %></h2>

    <p>
    <strong>Style:</strong> <%= link_to @beer.style, @beer.style %></br>
    <strong>Brewery:</strong> <%= link_to @beer.brewery.name, @beer.brewery %>
  </p>

  <% if !@beer.ratings.empty? %>
    <p>Has <%= pluralize @beer.ratings.count, 'rating', 'ratings' %>,
       average <%= sprintf "%0.1f", @beer.average_rating %></p>
  <% end %>
<% end %>
<%= edit_and_destroy_buttons(@beer) %>
</div>
<div class="col-md-6">
  </br>
  <% if current_user %>
    <div class="col-md-6">
      <%= form_for(@rating) do |f| %>
        <div class="form-group">
          <%= f.hidden_field :beer_id, class:'form-control' %>
          <strong>Rate this beer:</strong>  <%= f.number_field :score, class:'form-control' %>
      </div>
      <%= f.submit 'Create Rating', class:'btn btn-primary' %>
    <% end %>
    </div>
  <% end %>
</div>
</div>

