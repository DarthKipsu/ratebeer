<p id="notice"><%= notice %></p>

<h2><%= @style.name %></h2>

<p><%= @style.description %></p>

<% if not @style.beers.empty? %><h3>Beers:</h3><% end %>

<ul>
  <% @style.beers.each do |beer| %>
      <li><%= link_to beer.name, beer %> by
          <%= link_to beer.brewery.name, beer.brewery %></li>
    <% end %>
</ul>

<%= edit_and_destroy_buttons(@style) %>
