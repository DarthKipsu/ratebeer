<h1>Listing Users</h1>

<div class="col-md-10">

  <table class="table table-condensed table-hover">
    <thead>
      <tr>
        <th>Username</th>
        <th></th>
        <th> rated beers </th>
        <th> total ratings </th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.username, user %></td>
          <td>
            <% if user && user.admin? %>
              <div class="label label-info">admin</div>
            <% end %>
            <% if current_user && current_user.admin? && user.suspended? %>
              <div class="label label-warning">account frozen</div>
            <% end %>
          </td>
          <td><%= user.beers.size %></td>
          <td><%= user.ratings.size %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New User', new_user_path, class: 'btn btn-primary' %>
</div>
